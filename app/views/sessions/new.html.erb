<h1>Sign In</h1>

<%= form_tag(session_path) do  %>
	<fieldset>
		<ul>
			<li>
				<%= label_tag :email %>
				<%= email_field_tag :email, nil, autofocus: true, size: 40 %>
			</li>

			<li>
				<%= label_tag :password %>
				<%= password_field_tag :password, nil, size: 40 %>
			</li>

			<p>
				<%= submit_tag 'Sign In' %>
			</p>
		</ul>
	</fieldset>

<% end %>